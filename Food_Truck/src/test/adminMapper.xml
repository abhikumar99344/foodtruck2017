<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"      
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.foodtruck.dao.AdminDAO">

	<!-- 관리자 정보 -->
	<select id="getAdmin" resultMap="adminMap">

		SELECT * FROM ADMIN
		<where>ADMIN_ID=#{adminId}</where>
	</select>

	<!-- 관리자 리스트 -->
	<select id="getAdminList" resultMap="adminMap">

		SELECT * FROM ADMIN

	</select>

	<!-- 관리자 등록 -->
	<insert id="insertAdmin">

		INSERT INTO ADMIN (ADMIN_ID, ADMIN_PW, ADMIN_TEL)
		VALUES(#{adminId}, #{adminPw}, #{adminTel} )

	</insert>

	<!-- 관리자 수정 -->
	<update id="updateAdmin">

		UPDATE ADMIN SET
		ADMIN_ID=#{adminId},
		ADMIN_PW=#{adminPw}, ADMIN_TEL=#{adminTel}

	</update>

	<!-- 관리자 삭제 -->
	<delete id="deleteAdmin">

		DELETE FROM ADMIN
		<where> ADMIN_ID=#{adminId} </where>

	</delete>

	<resultMap type="AdminVO" id="adminMap">
		<result column="ADMIN_ID" property="adminId" />
		<result column="ADMIN_PW" property="adminPw" />
		<result column="ADMIN_TEL" property="adminTel" />
	</resultMap>
	
</mapper>