<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.foodtruck.dao.SellerDAO">

	<!-- 판매자 정보 -->
	<select id="getSeller" resultMap="SellerMap">
	
		SELECT * FROM SELLER
		<where> SEL_ID=#{selId} </where>
	
	</select>

	<!-- 판매자 리스트 -->
	<select id="getSellerList" resultMap="SellerMap">
		
		SELECT * FROM SELLER
			
	</select>
	
	<!-- 판매자 입력 -->
	<insert id="insertSeller">
	
		INSERT INTO SELLER (SEL_ID, SEL_PW, SEL_NAME, SEL_TEL)
		VALUES(#{selId}, #{selPw}, #{selName}, #{selTel})
	
	</insert>
	
	<!-- 판매자 수정 -->
	<update id="updateSeller">
	
		UPDATE SELLER SET
		SEL_PW=#{selPw}, SEL_NAME=#{selName}, SEL_TEL=#{selTel}
		<where> SEL_ID=#{selId} </where>
		
	</update>
	
	<!-- 판매자 삭제 -->
	<delete id="deleteSeller">
		
		DELETE FROM SELLER
		<where> SEL_ID=#{selId} </where>
	
	</delete>
	

	<resultMap type="com.foodtruck.vo.SellerVO" id="SellerMap">
		<result column="SEL_ID" property="selId"/>
		<result column="SEL_PW" property="selPw"/>
		<result column="SEL_NAME" property="selName"/>
		<result column="SEL_TEL" property="selTel"/>
	</resultMap>
	
</mapper>